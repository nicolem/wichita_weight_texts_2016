<p id="notice"><%= notice %></p>

<h1>Listing B Messages</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @b_messages.each do |b_message| %>
      <tr>
        <td><%= b_message.text %></td>
        <td><%= link_to 'Show', b_message %></td>
        <td><%= link_to 'Edit', edit_b_message_path(b_message) %></td>
        <td><%= link_to 'Destroy', b_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

