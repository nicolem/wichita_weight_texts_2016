<p id="notice"><%= notice %></p>

<h1>Listing A Messages</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @a_messages.each do |a_message| %>
      <tr>
        <td><%= a_message.text %></td>
        <td><%= link_to 'Show', a_message %></td>
        <td><%= link_to 'Edit', edit_a_message_path(a_message) %></td>
        <td><%= link_to 'Destroy', a_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

